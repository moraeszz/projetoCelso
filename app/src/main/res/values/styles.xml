<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3D8079</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

      <!--    Estilos textos usados como titulo-->
    <style name="text_title" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
    </style>

<!--    Estilos labels para backgrounds escuros -->
    <style
        name="lable_dark_background"
        parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@android:color/white</item>




    </style>

</resources>